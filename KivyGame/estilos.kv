<InicioWindows>
    name: "inicio"
    canvas:
        Rectangle:
            pos: self.pos
            size: 375,667
            source: "fondo.jpg"

    BoxLayout:
        size: root.width, root.height/2

        FloatLayout:
            Label:
                color:0.250,0.250,0.6,1
                text: "Bienvenido a KivyGames"
                size_hint: 0.8, 0.2
                pos_hint: {"x":0.1, "top":1}
                font_size: 30
            Button:
                background_color: 0, 0, 0, 0.5
                pos_hint:{"x":0.2,"y":0.5}
                size_hint: 0.6, 0.2
                halign: 'center'
                valign: 'bottom'
                on_press:
                    root.manager.transition.direction = "up"
                    root.cargarTrain()

                Image:
                    source: 'memoriaIcon.png'
                    center_x: self.parent.center_x -80
                    center_y: self.parent.center_y +10
                    size_hint_x: None
                    width: 50
                Label:
                    font_size: 30
                    center_x: self.parent.center_x+20
                    center_y: self.parent.center_y +10
                    pos_hint:{"x":2,"y":2}
                    size_hint_x: None
                    width: 100
                    text: "Colormania"

            Button:
                background_color: 0, 0, 0, 0.5
                pos_hint:{"x":0.2,"y":0.2}
                size_hint: 0.6, 0.2
                halign: 'center'
                valign: 'bottom'
                on_press:
                    root.manager.transition.direction = "down"
                    root.cargarFurious()

                Image:
                    source: 'memoriaIcon.png'
                    center_x: self.parent.center_x -80
                    center_y: self.parent.center_y +10
                    size_hint_x: None
                    width: 50
                Label:
                    font_size: 30
                    center_x: self.parent.center_x+20
                    center_y: self.parent.center_y +10
                    pos_hint:{"x":2,"y":2}
                    size_hint_x: None
                    width: 100
                    text: "Memoria"




